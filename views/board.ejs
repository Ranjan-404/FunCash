<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script  src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Leatherboard</title>
    <style>
  .section {
    padding: 0 !important;
}

 .section .win{
    width: 100%;
    height: 20vh;
    background-color: var(--primary);
    display: grid;
    place-items: center;
    
 }
 .section .win i{
    font-size: 70px;

 }
 table{
    border-radius: 10px;
    margin: 10px 0;
    width: 100%;
 }
 td, th {
  text-align: left;
  padding: 8px;
  font-size: clamp(18px,4vw,25px);

}
tr:first-child{
    background-color: var(--primary);
}

tr {
  background-color: var(--light);
}
    </style>
    <link rel="stylesheet" href="main.css" />
  </head>
  <body>
    <div class="overlay open"></div>
    <main class="main open">
      <header>
        <div class="head">
          <i onclick="openSidebar()" id="icon" class="material-icons hide">menu</i>
          <h2 style="margin-left: 10px">Leatherboard</h2>
        </div>
      </header>
    
      <section class="section">
        <div class="win">
            <i class="material-icons">military_tech</i>
        </div>
          <table>
            <tr>
                <th>Name</th>
                <th>Won</th>
            </tr>
            <% for (const user of users) { %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.price %></td>
                </tr>
              <% } %>
          </table>
            </section>

    </main>

    <%- include('./partials/slider'); %>

    <script src="main.js"></script>


  </body>
</html>
